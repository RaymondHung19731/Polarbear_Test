<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg_metalpattern"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="18"
        android:background="@null"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:orientation="horizontal"
        >
        <View
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="18"
            android:background="@null"
            />
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="60 "
            android:background="@drawable/selector_btn_goback"
            />
        <TextView
            android:id="@+id/tv_wificonnection"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="946"
            android:text="@string/wifi_connection"
            android:textColor="@android:color/white"
            android:textSize="@dimen/size_text_large"
            android:gravity="center"
            android:background="@null"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="18"
        android:background="@null"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="578"
        android:orientation="horizontal"
        >
        <View
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="18"
            android:background="@null"
            />
        <FrameLayout
            android:id="@+id/fl_wifilist_container"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="480"
            android:background="#55000000"
            />
        <View
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="24"
            android:background="@null"
            />
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="484"
            android:background="@null"
            android:orientation="vertical"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="18"
                android:background="@null"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="90"
                android:orientation="horizontal"
                android:background="#55000000"
                >
                <View
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="60"
                    android:background="@mipmap/ic_wifi"
                    />
                <TextView
                    android:id="@+id/tv_wifi_you_connect"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="421"
                    android:text=""
                    android:textColor="#e6e6e6e6"
                    android:textSize="@dimen/size_text_large"
                    android:gravity="center_vertical|left"
                    android:background="@null"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="18"
                android:background="@null"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="90"
                android:orientation="horizontal"
                android:background="#55000000"
                >
                <View
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="60"
                    android:background="@mipmap/ic_password"
                    />
                <EditText
                    android:id="@+id/et_password"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="421"
                    android:hint="@string/password"
                    android:textColor="#e6e6e6e6"
                    android:textSize="@dimen/size_text_large"
                    android:gravity="center_vertical|left"
                    android:background="@null"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:background="@null"
                />
            <ImageButton
                android:id="@+id/ib_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/selector_btn_ok"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="12"
                android:background="@null"
                />
            <TextView
                android:id="@+id/tv_messages"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="170"
                android:scrollbars = "vertical"
                android:textColor="@android:color/white"
                android:textSize="@dimen/size_text_medium"
                android:background="#55000000"
                />
        </LinearLayout>
        <View
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="18"
            android:background="@null"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="18"
        android:background="@null"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:background="@null"
        android:orientation="horizontal"
        >
        <View
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="228"
            android:background="@null"
            />
        <ImageButton
            android:id="@+id/btn_phonewifi"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="60"
            android:background="@drawable/selector_btn_retry"
            android:layout_gravity="center"
            />
        <View
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="736"
            android:background="@null"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="16"
        android:background="@null"
        />
</LinearLayout>
